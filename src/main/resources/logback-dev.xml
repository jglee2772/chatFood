<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 개발환경 전용 로그 설정 -->
    
    <!-- 개발환경용 콘솔 로그 포맷 (더 자세한 정보) -->
    <property name="DEV_CONSOLE_PATTERN" 
              value="%clr(%d{HH:mm:ss.SSS}){faint} %clr(%-5level) %clr([%thread]){magenta} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n%wEx"/>

    <!-- 개발환경용 파일 로그 포맷 -->
    <property name="DEV_FILE_PATTERN" 
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n"/>

    <!-- 콘솔 출력 (개발환경) -->
    <appender name="DEV_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${DEV_CONSOLE_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 개발환경용 파일 출력 -->
    <appender name="DEV_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/chatfood-dev.log</file>
        <encoder>
            <pattern>${DEV_FILE_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/chatfood-dev.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- 개발환경용 SQL 로그 -->
    <appender name="SQL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/sql-dev.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/sql-dev.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>3</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- SQL 전용 로거 -->
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="SQL_FILE"/>
    </logger>

    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
        <appender-ref ref="SQL_FILE"/>
    </logger>

    <!-- 애플리케이션 로거 (개발환경) -->
    <logger name="com.chatfood" level="DEBUG" additivity="false">
        <appender-ref ref="DEV_CONSOLE"/>
        <appender-ref ref="DEV_FILE"/>
    </logger>

    <!-- Spring Framework 로거 (개발환경) -->
    <logger name="org.springframework" level="DEBUG"/>
    <logger name="org.springframework.web" level="DEBUG"/>
    <logger name="org.springframework.security" level="DEBUG"/>

    <!-- 루트 로거 -->
    <root level="INFO">
        <appender-ref ref="DEV_CONSOLE"/>
        <appender-ref ref="DEV_FILE"/>
    </root>

</configuration>
